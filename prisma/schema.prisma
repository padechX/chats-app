datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        String   @id @default(cuid())
  wamid     String   @unique
  from      String
  to        String
  text      String
  type      String   @default("text")
  status    String   @default("received")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([from])
  @@index([to])
}
